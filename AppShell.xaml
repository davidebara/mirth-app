<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MirthApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MirthApp"
    Shell.FlyoutBehavior="Disabled"
    Title="Mirth">

    <TabBar>
        <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                />
        <ShellContent
                Title="Releases"
                ContentTemplate="{DataTemplate local:ReleaseEntryPage}"
                />
        <ShellContent
                Title="Artists"
                ContentTemplate="{DataTemplate local:ArtistEntryPage}"
                />  
    </TabBar>

</Shell>
